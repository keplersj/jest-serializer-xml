{
  "name": "jest-serializer-xml",
  "version": "0.0.0-development",
  "description": "A snapshot serializer for XML strings.",
  "main": "index.js",
  "repository": "https://github.com/keplersj/jest-serializer-xml",
  "author": "Kepler Sticka-Jones <kepler@stickajones.org>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "is-xml": "^0.1.0",
    "xml-formatter": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "eslint": "^6.5.1",
    "eslint-config-starstuff": "^1.0.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "jest-runner-eslint": "^0.7.4",
    "jest-runner-prettier": "^0.3.1",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24"
  },
  "scripts": {
    "test": "jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-starstuff"
    ],
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "node": true
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "lint:prettier",
        "preset": "jest-runner-prettier"
      },
      {
        "displayName": "lint:eslint",
        "runner": "eslint",
        "testMatch": [
          "<rootDir>/**/*.js"
        ]
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
